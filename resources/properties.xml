<resources>
    <properties>
        <property id="unitsProp" type="number">0</property>
        <property id="dataLabelProp" type="number">0</property>
        <property id="displayProp" type="number">0</property>
        <property id="zoneProp" type="number">0</property>
        <property id="selectedStationCode" type="number">7710</property>
        <property id="selectedStationName" type="string">False Creek</property>
        <property id="appVersion" type="string">0.1a</property>
    </properties>

    <strings>
        <string id="unitsSettingTitle">Units</string>
        <string id="unitsSettingPrompt">Select units to use</string>
        <string id="unitsSettingSystem">System</string>
        <string id="unitsSettingMetric">Metric</string>
        <string id="unitsSettingImperial">Imperial</string>

        <string id="labelSettingTitle">Graph Labels</string>
        <string id="labelSettingPrompt">Select label to use</string>
        <string id="labelSettingValHeight">Height</string>
        <string id="labelSettingValTime">Time</string>
        <string id="labelSettingValNone">None</string>

        <string id="displaySettingTitle">Display</string>
        <string id="displaySettingPrompt">Select display mode</string>
        <string id="displaySettingValGraph">Graph</string>
        <string id="displaySettingValTable">Table</string>

        <string id="zoneSettingTitle">Zone</string>
        <string id="zoneSettingPrompt">Select zone</string>
        <string id="zoneSettingValSouth">South BC</string>
        <string id="zoneSettingValNorth">North BC</string>
        
        <string id="appVersionTitle">Version</string>
    </strings>

    <settings>
        <setting propertyKey="@Properties.appVersion" title="@Strings.appVersionTitle">
            <settingConfig type="alphaNumeric" readonly="true"/>
        </setting>
        <setting propertyKey="@Properties.unitsProp" title="@Strings.unitsSettingTitle" prompt="@Strings.unitsSettingPrompt">
            <settingConfig type="list">
                <listEntry value="0">@Strings.unitsSettingSystem</listEntry>
                <listEntry value="1">@Strings.unitsSettingMetric</listEntry>
                <listEntry value="2">@Strings.unitsSettingImperial</listEntry>
            </settingConfig>
        </setting>
        <setting propertyKey="@Properties.dataLabelProp" title="@Strings.labelSettingTitle" prompt="@Strings.labelSettingPrompt">
            <settingConfig type="list">
                <listEntry value="0">@Strings.labelSettingValHeight</listEntry>
                <listEntry value="1">@Strings.labelSettingValTime</listEntry>
                <listEntry value="2">@Strings.labelSettingValNone</listEntry>
            </settingConfig>
        </setting>
        <setting propertyKey="@Properties.displayProp" title="@Strings.displaySettingTitle" prompt="@Strings.displaySettingPrompt">
            <settingConfig type="list">
                <listEntry value="0">@Strings.displaySettingValGraph</listEntry>
                <listEntry value="1">@Strings.displaySettingValTable</listEntry>
            </settingConfig>
        </setting>
        <setting propertyKey="@Properties.zoneProp" title="@Strings.zoneSettingTitle" prompt="@Strings.zoneSettingPrompt">
            <settingConfig type="list">
                <listEntry value="0">@Strings.zoneSettingValSouth</listEntry>
                <listEntry value="1">@Strings.zoneSettingValNorth</listEntry>
            </settingConfig>
        </setting>
    </settings>
</resources>
